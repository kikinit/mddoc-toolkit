{
  "name": "@kikinit/readme-toolkit",
  "version": "1.2.0",
  "description": "A Typescript library for extracting key sections from Markdown-based README files, offering customizable extensions (contexts) for specific use cases like code repositories.",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-test-files",
    "copy-test-files": "cp -r tests/test-files dist/tests/",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "manual-test": "node ./manual-test.js",
    "lint": "npx eslint . || exit 0",
    "lint:fix": "npx eslint . --fix || exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/legitmattias/readme-toolkit.git"
  },
  "author": "mu222cu@student.lnu.se",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
