{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "./lib/**/*.ts",
    "lib/types/**/*.ts",
    "./tests/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
